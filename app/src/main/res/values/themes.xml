<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foody" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_orange</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textStyle">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #524F4F
        </item>

        <item name="android:textStyle">bold</item>

    </style>
    <style name="Theme.Foody.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Foody.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Foody.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>