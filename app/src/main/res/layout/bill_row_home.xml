<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.peter.foody.data.remote.model.models.ItemsModels" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="10dp"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.16"
                android:background="#0ADCDC53"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:padding="2dp">


                    <TextView
                        android:id="@+id/total_v"
                        style="@style/textStyle"
                        android:text="@{String.valueOf(data.price)}"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.16"
                        android:gravity="center"
                        tools:text="total" />


                    <TextView
                        android:id="@+id/price_v"
                        style="@style/textStyle"
                        android:text="@{String.valueOf(data.price)}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.16"
                        android:gravity="center"
                        tools:text="price" />


                    <TextView
                        android:id="@+id/contaty_v"
                        style="@style/textStyle"
                        android:layout_width="6dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.16"
                        android:background="@android:drawable/editbox_background"
                        android:text="@{String.valueOf(data.Quantity)}"
                        android:gravity="center"
                        tools:text="1" />


                    <TextView
                        android:id="@+id/name_v"
                        style="@style/textStyle"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.16"
                        android:gravity="center"
                        android:text="@{String.valueOf(data.ItemName)}"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="#E4AEABAB" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>